enum ActionType {
  View
  AddToFavorite
  AddToWishlist
  AddToCart
  Purchase
  Submit
}

model EventType {
  Id   Int    @id @default(autoincrement())
  Name String

  TrackingRules TrackingRule[]
  // Interactions  Interaction[]
  Events        Event[]
}

model TrackingTarget {
  Id    Int    @id @default(autoincrement())
  Value String

  PatternId Int
  Pattern   Pattern @relation(fields: [PatternId], references: [Id])

  OperatorId Int
  Operator   Operator @relation(fields: [OperatorId], references: [Id])

  TrackingRules TrackingRule[]
}

model Condition {
  Id    Int    @id @default(autoincrement())
  Value String

  TrackingRuleID Int
  TrackingRule   TrackingRule @relation(fields: [TrackingRuleID], references: [Id])

  PatternId Int
  Pattern   Pattern @relation(fields: [PatternId], references: [Id])

  OperatorID Int
  Operator   Operator @relation(fields: [OperatorID], references: [Id])
}

