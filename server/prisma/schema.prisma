}

model ReturnMethod {
  Id Int @id @default(autoincrement())

  DomainID Int
  Domain   Domain @relation(fields: [DomainID], references: [Id])

  OperatorID Int
  Operator   Operator @relation(fields: [OperatorID], references: [Id])

  ReturnType        ReturnType
  Value             String
  ConfigurationName String

  Customizing Json?
  Layout      Json?
  Style       Json?
  Delay       Float?
}

